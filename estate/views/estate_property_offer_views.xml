<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price" width="20%"/>
                <field name="partner_id" width="20%"/>
                <field name="validity" width="20%" />
                <field name="date_deadline" width="20%"/>
                <button name="action_accept_offer" type="object" icon="fa-check" title="Accept"/>
                <button name="action_refuse_offer" type="object" icon="fa-times" title="Refuse"/>
                <field name="status" width="20%"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offers">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>